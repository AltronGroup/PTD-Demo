<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urovo Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:id="@+id/btnPrinter"
            android:text="Printer"
            android:onClick="onPrinterClick"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Scanner"
            android:id="@+id/btnScanner"
            android:onClick="onScannerClick"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ICC"
            android:onClick="onIccClick"
            android:id="@+id/btnIcc"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="MAG"
            android:onClick="onMagClick"
            android:id="@+id/btnMag"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="PICC"
            android:onClick="onPiccClick"
            android:id="@+id/btnPicc"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Device Manager"
            android:id="@+id/btnDeviceManager"
            android:onClick="onDeviceManagerClick"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Invoke"
            android:onClick="onInvokeClick"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Exit"
            android:onClick="onExitClick"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
